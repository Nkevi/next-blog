    "remark-smartypants": "^3.0.2",
    "remark-squeeze-paragraphs": "^6.0.0",
    "sass": "^1.83.4",
    "shiki": "^2.1.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.4.3",
    "tailwindcss-hocus": "^0.0.7",
    "ts-prune": "^0.10.3",
    "typescript": "^5.7.3",
    "velite": "^0.2.2",
    "xml": "^1.0.1"
