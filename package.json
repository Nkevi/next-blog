    "react-compare-slider": "^3.1.0",
    "react-dom": "19.0.0",
    "swr": "^2.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.19.0",
    "@jsdevtools/rehype-toc": "^3.0.2",
