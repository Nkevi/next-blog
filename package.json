    "autoprefixer": "^10.4.20",
    "colord": "^2.9.3",
    "cssnano": "^7.0.6",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.38.4",
    "eslint": "9.19.0",
    "eslint-config-next": "15.1.6",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
