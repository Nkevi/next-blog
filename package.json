    "@stylistic/eslint-plugin": "^3.0.0",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^22.10.10",
    "@types/react": "19.0.8",
    "@types/react-dom": "19.0.3",
    "@types/xml": "^1.0.11",
